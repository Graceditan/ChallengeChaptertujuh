<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1B5B5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorite_username"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAVORITES"
        android:gravity="center_horizontal"
        android:id="@+id/fvt"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="20dp"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:id="@+id/welcomefavorite"/>

    <ImageView
        android:layout_marginLeft="300dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/favoriteprofile"
        android:layout_below="@id/fvt"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/favoritehome"
        android:layout_toRightOf="@id/favoriteprofile"
        android:layout_below="@id/fvt"
        android:src="@drawable/ic_home"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_favorite_film"
        android:layout_below="@id/favoriteprofile"
        android:layout_margin="20dp"/>

    <TextView

        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:id="@+id/checkdatafavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>